<div class="col-12 col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
  <div class="card-vaults shadow-sm m-2 d-flex flex-column flex-grow-1">
    <%= link_to vault_path(vault), class: "text-decoration-none d-flex flex-column flex-grow-1" do %>
      <div class="card-body d-flex flex-column flex-grow-1">
        <%# progress bar %>
        <div class="progress mb-3" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar" style="width: <%= (vault.current_amount_vault / vault.donation_amount) * 100 %>%;"></div>
        </div>

        <div class="d-flex justify-content-between">
          <div class="text-start ml-2">
            <h6 style="color:rgb(90,90,90); margin-top:5px;">Current donations: €<%= vault.current_amount_vault.to_i %></h6>
          </div>
          <div class="text-start mr-2">
            <h6 style="color:rgb(90,90,90); margin-top:5px;">Goal: €<%= vault.donation_amount.to_i %></h6>
          </div>
        </div>

        <%# vault info %>
        <div class="d-flex align-items-center justify-content-center my-3">
          <%= vault_icon(vault) %>
          <h3 class="m-2 mb-0"><%= vault.name %></h3>
        </div>

        <%# Description at the top %>
        <p class="card-text text-start m-3"><%= vault.description %></p>

        <%# Flex spacer to push content to top and leave space at bottom %>
        <div class="flex-grow-1"></div>
      </div>
    <% end %>
  </div>
</div>
