<div class="parentDiv">
  <div style="height:130px;">
    <hr>
  </div>


  <div class="home-btn d-flex justify-content-center align-items-center">
    <button  class="rounded-pill showIntroDiv">
    <span  class="text-muted">Event:   <strong><%= @event.name %></strong></span>
    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="32" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h13M12 5l7 7-7 7"/></svg></button>
  </div>


  <div class="home-btn showFlexParent ">

    <div class="text-muted showFlexChild shadow">
      <h2>Goal amount: <strong><%= @event.goal_amount.to_i %>€</strong></h2>
      <% userIndex = @users.find( @event.user_id) %>
      <h6>Organizer: <strong><%= userIndex.first_name %> <%= userIndex.last_name %></strong></h6>
      <p>Current_amount: <%= @event.current_amount.to_i %>€</p>
      <p>Description: <strong><%= @event.description %></strong></p>
      <%= cl_image_tag @event.photo.key, height: 300, width: 400, crop: :fill, class: "photo" %>
    </div>

    <div class="text-muted showFlexChild shadow">
        <h2>Location: <strong> <%= @event.location %> </strong></h2>
    </div>

  </div>

  <%= simple_form_for @donation do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.input :contribution %>
    <%= f.submit "submit", class: "btn btn-sm btn-primary btn-block mt-2" %>
  <% end %>
</div>
